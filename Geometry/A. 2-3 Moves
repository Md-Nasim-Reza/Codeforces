int cas=0;

void solve(){
    ll n,i,j;
    cin>>n;
    if(n==1){
        cout<<2<<nl;
    }
    else if(n%3==0){
        cout<<n/3<<nl;
    }
    else if(n%3==1){
        cout<<2+(n-4)/3<<nl;
    }
    else if(n%3==2){
        cout<<1+(n-2)/3<<nl;
    }

}

int main(){
    ll i,tc,n,Pow,m,ans;
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cin>>tc;
    while(tc--){
        solve();
    }
return 0;
}
